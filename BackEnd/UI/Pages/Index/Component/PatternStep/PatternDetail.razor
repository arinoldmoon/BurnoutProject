@inherits PatternDetailComponent

<div class="row" style="margin-bottom: 10px">
    <div class="col-md-12">
        <RadzenTextBox Placeholder="Program Name" style="width: 100%" Name="txtProgramName"
            @bind-Value="@PatternData.PatternName" Change="@TextBoxChanged">
        </RadzenTextBox>
    </div>
</div>
<div style="margin-bottom: 5px; margin-top: 5px" class="row">
    <div class="col-md-12">
        <RadzenCard>
            <ChildContent>
                <div class="row">
                    <div class="col-md-12">
                        <RadzenHeading Size="H3" Text="Air Flow Setting">
                        </RadzenHeading>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <RadzenLabel Text="On when tempurature reach">
                        </RadzenLabel>
                        <RadzenNumeric style="margin-left: 5px; margin-right: 5px; width: 50px" ShowUpDown="false"
                            @bind-Value="@PatternData.Airpump.StartTemp">
                        </RadzenNumeric>
                        <RadzenLabel Text="°C">
                        </RadzenLabel>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <RadzenLabel Text="Off when tempurature reach">
                        </RadzenLabel>
                        <RadzenNumeric style="margin-left: 5px; margin-right: 5px; width: 50px" ShowUpDown="false"
                            @bind-Value="@PatternData.Airpump.EndTemp">
                        </RadzenNumeric>
                        <RadzenLabel Text="°C">
                        </RadzenLabel>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <RadzenLabel Text="Turn off delay">
                        </RadzenLabel>
                        <RadzenNumeric style="margin-left: 5px; margin-right: 5px; width: 50px" ShowUpDown="false"
                            @bind-Value="@PatternData.Airpump.DelayDuration">
                        </RadzenNumeric>
                        <RadzenLabel Text="min">
                        </RadzenLabel>
                    </div>
                </div>
            </ChildContent>
        </RadzenCard>
    </div>
</div>
<div class="row" style="margin-bottom: 10px">
    <div class="col-md-12">
        <RadzenDataGrid @ref="OvenStepGrid" AllowFiltering="false" AllowPaging="false" AllowSorting="false"
            Data="PatternData.PatternItems" TItem="PatternItem" LoadData="LoadDataGrid">
            <Columns>
                <RadzenDataGridColumn TItem="PatternItem" Property="Step" Title="Step No">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PatternItem" Property="Temp" Title="Temp">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PatternItem" Property="StepDuration" Title="Duration">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PatternItem" Filterable="false" Sortable="false"
                    TextAlign="TextAlign.Center" Width="70px">
                    <Template Context="OvenStep">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small"
                            Click="@((args) =>GridDeleteButtonClick(args, OvenStep))" @onclick:stopPropagation="true">
                        </RadzenButton>
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
<div class="row" style="margin-bottom: 10px">
    <div class="col-md-12" style="text-align: center">
        <RadzenButton Icon="add_circle_outline" Click="@AddNewRow">
        </RadzenButton>
    </div>
</div>
<div class="row" style="margin-bottom: 10px">
    <div class="col-md-12" style="text-align: center">       
        <RadzenButton style="background-color: #6d787d; margin-left: 5px; margin-right: 5px" Disabled=btnDisable Text="Save"
            Click="@((args) => Save(args))">
        </RadzenButton>
        <RadzenButton style="background-color: #e6c54f; margin-left: 5px; margin-right: 5px" Disabled=btnDisable Text="Next"
            Click="@((args) => Next(args))">
        </RadzenButton>        
    </div>
</div>