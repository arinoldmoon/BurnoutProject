@inherits MainLayoutComponent

<RadzenDialog />
<RadzenNotification />

<RadzenHeader>
    <ChildContent>
        <div class="row justify-content-start align-items-center">
            <div class="col-10 d-flex align-items-center">
                <RadzenSidebarToggle Click="@SidebarToggleClick">
                </RadzenSidebarToggle>
                <RadzenLabel style="font-size: medium; font-weight: 700" Text=@MachineName>
                </RadzenLabel>
                <RadzenLabel style="font-size: small; padding-left: 15px" Text=@MachineModel>
                </RadzenLabel>
            </div>
            <div class="col-2 text-right">
                <div class="align-items-center d-flex col-xl-2 offset-md-5 col-md-2 justify-content-end offset-xl-6 col-6"
                    style="float: right">
                    <RadzenButton Icon="notifications" style="background-color: #e6ecef; color: #414141" Click="@Notifications">
                    </RadzenButton>
                </div>
            </div>
        </div>
    </ChildContent>
</RadzenHeader>
<RadzenBody @ref="body0">
    <ChildContent>
        <RadzenContentContainer Name="main">
            @Body
        </RadzenContentContainer>
    </ChildContent>
</RadzenBody>
<RadzenSidebar @ref="sidebar0">
    <ChildContent>
        <RadzenPanelMenu style="height: 100%">
            <ChildContent>
                <div class="col-lg-12" style="text-align:center; margin-top:15px;">
                    <div class="row">
                        <div class="col-lg-12">
                            <RadzenImage Path="img/icon-512.png" Style="width:32px">
                            </RadzenImage>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <RadzenLabel style="font-size: 3vh; font-weight: 700" Text="Old Moon">
                            </RadzenLabel>
                        </div>
                    </div>
                </div>
                <RadzenPanelMenuItem Icon="timeline" Path="/" Text="Monitoring">
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Icon="bar_chart" Path="#" Text="Data">
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Icon="settings" Path="/setting" Text="Setting">
                </RadzenPanelMenuItem>
            </ChildContent>
        </RadzenPanelMenu>
    </ChildContent>
</RadzenSidebar>
<RadzenFooter>
    <ChildContent>
        <RadzenLabel Text="Burnout IOT by Oldmoon Co.,Ltd., Copyright â’¸ 2021" Style="font-size: small;">
        </RadzenLabel>
    </ChildContent>
</RadzenFooter>
